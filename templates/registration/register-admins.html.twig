{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription Administrateurs</h1>

    {{ form_start(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        <div class="row">
			<div class="col"> 
                {{ form_label(form.plainPassword, 'Mot de passe') }}
                {{ form_widget(form.plainPassword.first) }}
            </div>
			<div class="col"> 
                {{ form_label(form.plainPassword, 'Confirmer le mot de passe') }}
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <p>
            </br>
			<button type="submit" class="btn btn-info">Valider</button>
		</p>
    {{ form_end(form) }}
{% endblock %}