{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			{% include "_inc/flash.messages.html.twig" %}
			<h1>Gestion des événements</h1>
		</div>
	</div>
	<div class="row">
	<div class="col-md-12">
	
    <p class="text-right">
        
    </p>
	</div>
		<p class="text-right">
			<a href="{{ url('entreprise.devis.form') }}" class="btn btn-success">+ Nouvel événement</a>		
		</p>
		<table class="table table-striped">
			<tr>
				<th>Evénement</th>
				<th>Date</th>
				<th>Durée</th>
				<th>Nombre de participant</th>
				<th>Nombre d'inscrit</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
			{% for devis in results %} 
				<tr>
					<td class="col-md-1">{{ devis.libelle }}</td>
					<td class="col-md-1">{{ devis.date|date("m/d/Y") }}</td>
					<td class="col-md-2">
						{{ devis.heureDebut }} - {{ devis.heureFin }}
					</td>
					<td class="col-md-2">{{ devis.nbParticipants }}</td>
					<td class="col-md-2">{{ devis.nbInscrit}}</td>
					<td class="col-md-2">{{ devis.devisStatut.texteDevisStatut }}</td>
					<td class="col-md-2">
					{% if date() > devis.date %}
						<a href="{{ url('entreprise.satisfaction.send', { event:devis.libelle }) }}" class="btn btn-dark col-md-12">Generer enquete de satisfaction</a>

					{% else %}
						{% if devis.devisStatut.texteDevisStatut == "Accepté" %}
							<a href="{{ url('entreprise.devis.form.update', { id:devis.id }) }}" class="btn btn-dark col-md-12">Editer l'évenement</a>
						{% else %}	
							<a href="{{ url('entreprise.propositions.index', { idDevis:devis.id }) }}" class="btn btn-dark col-md-12">Liste propositions</a>
							<a href="{{ url('entreprise.devis.form.update', { id:devis.id }) }}" class="btn btn-dark col-md-12">Editer l'évenement</a>
						
						{% endif %}
					<!--a href="{{ url('entreprise.devis.delete', { id:devis.id }) }}" class="btn btn-danger col-md-4">Supprimer</a-->
					{% endif %}
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}

