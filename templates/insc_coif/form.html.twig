{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			<h1>Inscription Coiffeur</h1>
		</div>
	</div>
	<div class="row">
		<div class="col">
			{{ form_start(form, { attr: { novalidate: 'novalidate' } } ) }}
				<p>
					{{ form_label(form.nomCoiffeur, 'Nom:') }}
					{{ form_widget(form.nomCoiffeur) }}
				</p>
				<p>
					{{ form_label(form.prenomCoiffeur, 'Prenom:') }}
					{{ form_widget(form.prenomCoiffeur) }}
				</p>
				<p>
					{{ form_label(form.adresseCoiffeur, 'Adresse:') }}
					{{ form_widget(form.adresseCoiffeur) }}
				</p>
				
				<p>
					<input type="submit" class="btn btn-info" value="Valider">
				</p>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}